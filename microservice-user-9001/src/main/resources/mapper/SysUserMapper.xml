<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.unicom.microservice.mapper.SysUserMapper">
    <resultMap id="BaseResultMap" type="cn.unicom.microservice.vo.UserVo" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="realname" property="realname" jdbcType="VARCHAR" />
        <result column="email" property="email" jdbcType="VARCHAR" />
        <result column="mobile" property="mobile" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="INTEGER" />
        <result column="lastlogintime" property="lastlogintime" jdbcType="VARCHAR" />
        <result column="dept_id" property="deptId" jdbcType="BIGINT" />
        <association property="sysDept" javaType="cn.unicom.microservice.entity.SysDept" >
            <id  column="dept_id" property="id"/>
            <result column="deptname" property="deptname" />
        </association>
    </resultMap>

    <resultMap id="UserResultMap" type="cn.unicom.microservice.vo.UserVo" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="realname" property="realname" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="salt" property="salt" jdbcType="VARCHAR" />
        <result column="email" property="email" jdbcType="VARCHAR" />
        <result column="mobile" property="mobile" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="INTEGER" />
        <result column="lastlogintime" property="lastlogintime" jdbcType="VARCHAR" />
        <result column="dept_id" property="deptId" jdbcType="BIGINT" />
        <association property="sysDept" javaType="cn.unicom.microservice.entity.SysDept" >
            <id  column="dept_id" property="id"/>
            <result column="deptname" property="deptname" />
        </association>
        <collection property="roles" ofType="cn.unicom.microservice.entity.SysRole">
            <id  column="role_id" property="id"/>
            <result column="role_name" property="name" />
            <collection property="permissions" ofType="cn.unicom.microservice.entity.SysMenu">
                <id  column="menu_id" property="id"/>
                <result column="parent_id" property="parentId" />
                <result column="menu_name" property="name" />
                <result column="url" property="url" />
                <result column="perms"  property="perms" />
                <result column="type"  property="type"/>
                <result column="icon"  property="icon"/>
                <result column="order_num"  property="orderNum"/>
                <result column="open_mode"  property="openMode"/>
            </collection>
        </collection>
    </resultMap>
  <select id="getSysUserByPage" resultMap="BaseResultMap">
      select a.id,a.username,a.realname,a.email,a.mobile,a.status,a.lastlogintime,b.id dept_id ,b.deptname from sys_user a inner join sys_dept b on a.dept_id=b.id  ${ew.customSqlSegment}
  </select>

    <select id="getUserInfoByPage" resultType="cn.unicom.microservice.vo.UserInfo">
      select a.id,a.username,a.realname,a.email,a.mobile,a.status,a.lastlogintime,b.id dept_id ,b.deptname from sys_user a inner join sys_dept b on a.dept_id=b.id  ${ew.customSqlSegment}
  </select>

    <select id="getUserInfoByCondition" resultMap="UserResultMap">
        select a.id,a.username,a.realname,a.password,a.salt,a.email,a.mobile,a.status,a.lastlogintime,b.id dept_id ,b.deptname ,d.id  role_id,d.`name` role_name,f.id menu_id,f.parent_id, f.name menu_name ,f.url ,f.perms,f.type,f.icon,f.order_num,f.open_mode
		from sys_user a inner join sys_dept b on a.dept_id=b.id
        inner join sys_user_role c on a.id=c.user_id
        inner join sys_role d on c.role_id=d.id
        inner join sys_role_menu e on d.id=e.role_id
        inner join sys_menu f on e.menu_id=f.id
        ${ew.customSqlSegment}
    </select>

</mapper>
